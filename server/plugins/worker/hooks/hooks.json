{
  "description": "Worker Stop hook - blocks exit if uncommitted changes or report_result not called",
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/ensure-clean-exit.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
